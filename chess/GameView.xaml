<UserControl x:Class="uwp.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:uwp"
             mc:Ignorable="d">

    <Grid Name="ChessGrid"  MouseDown="ChessGrid_MouseDown">
        <Grid.Resources>
            <!-- Стиль для ячеек шахматной доски -->
            <Style TargetType="Border" x:Key="ChessCell">
                <Setter Property="BorderBrush" Value="Black"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="AllowDrop" Value="True"/>
            </Style>
            <!-- Чередование цветов ячеек -->
            <Style TargetType="Border" BasedOn="{StaticResource ChessCell}" x:Key="ChessCellWhite">
                <Setter Property="Background" Value="White"/>
            </Style>
            <Style TargetType="Border" BasedOn="{StaticResource ChessCell}" x:Key="ChessCellBlack">
                <Setter Property="Background" Value="Black"/>
            </Style>
        </Grid.Resources>

        <!-- Ячейки шахматной доски -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Создаем ячейки с фигурами -->
        <!-- Верхний ряд (белые фигуры) -->
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="0" Grid.Column="0">
            <TextBlock Text="♖" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="0" Grid.Column="1">
            <TextBlock Text="♘" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="0" Grid.Column="2">
            <TextBlock Text="♗" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="0" Grid.Column="3">
            <TextBlock Text="♕" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="0" Grid.Column="4">
            <TextBlock Text="♔" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="0" Grid.Column="5">
            <TextBlock Text="♗" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="0" Grid.Column="6">
            <TextBlock Text="♘" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="0" Grid.Column="7">
            <TextBlock Text="♖" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Второй ряд (белые пешки) -->
        <Border Style="{StaticResource ChessCell}" Grid.Row="1" Grid.Column="0">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="1" Grid.Column="1">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="1" Grid.Column="2">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="1" Grid.Column="3">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="1" Grid.Column="4">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="1" Grid.Column="5">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="1" Grid.Column="6">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="1" Grid.Column="7">
            <TextBlock Text="♙" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Третий ряд и последующие (пустые ячейки) -->
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="2" Grid.Column="0">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="2" Grid.Column="1">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="2" Grid.Column="2">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="2" Grid.Column="3">

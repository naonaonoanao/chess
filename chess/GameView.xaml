        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="4" Grid.Column="7">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Шестой ряд и последующие (пустые ячейки) -->
        <Border Style="{StaticResource ChessCell}" Grid.Row="5" Grid.Column="0">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="5" Grid.Column="1">

        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="2" Grid.Column="6">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="2" Grid.Column="7">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>


        <!-- Четвёртый ряд и последующие (пустые ячейки) -->
        <Border Style="{StaticResource ChessCell}" Grid.Row="3" Grid.Column="0">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="3" Grid.Column="1">

            <!-- Стиль для дополнительного правого блока -->
            <Style x:Key="AdditionalRightBlockStyle" TargetType="Border">
                <Setter Property="Background" Value="#80aadd"/>
                <!-- Задаем фоновый цвет -->
                <Setter Property="CornerRadius" Value="10"/>
                <!-- Скругление углов -->
            </Style>
            
            <!-- Стиль для дополнительного левого блока-->
            <Style x:Key="AdditionalLeftBlock" TargetType="Border">
                <Setter Property="Background" Value="#33000000"/>
                <!-- Задаем фоновый цвет -->
                <Setter Property="CornerRadius" Value="10,10,5,5"/>
                <!-- Скругление углов -->
                <Setter Property="BorderBrush" Value="#adee"/>
                <!-- Цвет обводки -->
                <Setter Property="BorderThickness" Value="1"/>
                <!-- Толщина обводки -->
            </Style>

            
            
            

            <!-- Стиль для обычной кнопки -->
            <Style x:Key="CustomButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="#E69"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="BorderBrush" Value="#adee"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border 
                    Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="5" 
                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#746bb9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </Grid.Resources>
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
            

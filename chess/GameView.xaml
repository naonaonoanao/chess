        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="5" Grid.Column="7">
            <TextBlock Text=" " Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>


        <!-- Седьмой ряд (черные пешки) -->
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="6" Grid.Column="0">
            <TextBlock Text="♟" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="6" Grid.Column="1">
            <TextBlock Text="♟" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="6" Grid.Column="2">
            <TextBlock Text="♟" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="6" Grid.Column="3">
            <TextBlock Text="♟" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="6" Grid.Column="4">
            <TextBlock Text="♟" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCell}" Grid.Row="6" Grid.Column="5">
            <TextBlock Text="♟" Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
        <Border Style="{StaticResource ChessCellWhite}" Grid.Row="6" Grid.Column="6">

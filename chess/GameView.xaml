<UserControl x:Class="uwp.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:uwp"
             mc:Ignorable="d">

        


    <Grid>
        <Grid.Resources>
            <!-- Стиль для дополнительного правого блока -->
            <Style x:Key="AdditionalRightBlockStyle" TargetType="Border">
                <Setter Property="Background" Value="#80aadd"/>
                <!-- Задаем фоновый цвет -->
                <Setter Property="CornerRadius" Value="10"/>
                <!-- Скругление углов -->
            </Style>
            
            <!-- Стиль для дополнительного левого блока-->
            <Style x:Key="AddirionalLeftBlock" TargetType="Border">
                <Setter Property="Background" Value="#aade"/>
                <!-- Задаем фоновый цвет -->
                <Setter Property="CornerRadius" Value="10"/>
                <!-- Скругление углов -->
            </Style>
            
        </Grid.Resources>
        <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Grid Name="ChessGrid"  MouseDown="ChessGrid_MouseDown" Margin="7" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Grid.Resources>
                    <!-- Стиль для основных ячеек шахматной доски -->
                    <Style TargetType="Border" x:Key="ChessCell">
                        <Setter Property="BorderBrush" Value="#aade"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="AllowDrop" Value="True"/>
                        <Setter Property="Width" Value="20"/>
                        <Setter Property="Height" Value="20"/>
                    </Style>

                    <!-- Стиль для фигур шахматной доски -->
                    <Style x:Key="ChessPieceStyle" TargetType="TextBlock">
                        <!-- Добавляем свечение -->
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="5" Color="Black" ShadowDepth="0"/>
                            </Setter.Value>
                        </Setter>
                        <!-- Другие настройки стиля, если необходимо -->
                    </Style>

                    <!-- Стиль для боковых ячеек шахматной доски -->
                    <Style TargetType="Border" x:Key="ChessCellNumberBorder">
                        <Setter Property="BorderBrush" Value="#aade"/>
                        <Setter Property="Background" Value="#aade"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="AllowDrop" Value="True"/>
                    </Style>

                    <!-- Стиль для символов на боковых ячейках шахматной доски -->
                    <Style x:Key="ChessCellNumber" TargetType="TextBlock">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontFamily" Value="Comic Sans MS"/>
                        <Setter Property="FontSize" Value="4"/>
                        <!-- Добавляем свечение -->
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="3" Color="#746bb9" ShadowDepth="0"/>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <!-- Чередование цветов ячеек -->
                    <Style TargetType="Border" BasedOn="{StaticResource ChessCell}" x:Key="ChessCellWhite"  x:Name="ChessCellWhite">
                        <Setter Property="Background" Value="#E69"/>

                    </Style>
                    <Style TargetType="Border" BasedOn="{StaticResource ChessCell}" x:Key="ChessCellBlack" x:Name="ChessCellBlack">
                        <Setter Property="Background" Value="#746bb9"/>
                    </Style>
                    <Style TargetType="Border" BasedOn="{StaticResource ChessCell}" x:Key="ChessCellSelected" x:Name="ChessCellSelected">
                        <Setter Property="Background" Value="Yellow"/>
                    </Style>
                    <Style TargetType="Border" BasedOn="{StaticResource ChessCell}" x:Key="ChessCellChecked" x:Name="ChessCellChecked">
                        <Setter Property="Background" Value="Red"/>
                    </Style>

                    

                </Grid.Resources>

                <!-- Ячейки шахматной доски -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>

                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>

                <!-- Добавляем ячейки с цифрами слева -->
                <Border Style="{StaticResource ChessCellNumberBorder}" Grid.Row="0" Grid.Column="0" CornerRadius="5,0,0,0"></Border>
                <Border Style="{StaticResource ChessCellNumberBorder}" Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="8" Style="{StaticResource ChessCellNumber}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Style="{StaticResource ChessCellNumberBorder}" Grid.Row="2" Grid.Column="0">
                    <TextBlock Text="7" Style="{StaticResource ChessCellNumber}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                <Border Style="{StaticResource ChessCellNumberBorder}" Grid.Row="3" Grid.Column="0">
